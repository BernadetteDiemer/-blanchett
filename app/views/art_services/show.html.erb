<div class="container">
  <h3><%= @art_service.title.upcase %></h3>
  <ul class="service-show-top-info">
    <li>
      <div class="li-item">
        <i class="fa fa-star" aria-hidden="true"></i><p><strong>4.7</strong> (39 reviews)</p>
      </div>
    </li>
    <li>
      <div class="li-item">
        <i class="fa fa-map-marker" aria-hidden="true"></i><p>City, Country</p>
      </div>
    </li>
    <li>
      <div class="li-item">
        <i class="fa fa-user" aria-hidden="true"></i>
        <p>Hosted by <strong><%= @art_service.user.first_name %></strong></p>
      </div>
    </li>
  </ul>
  <br>
  <% if @art_service.photos.attached? %>
    <div class="gallery-box">
      <div class="service-gallery">
        <% @art_service.photos.each do |photo| %>
          <div class="gallery-item" style="background-image: url('<%= cl_image_path photo.key%>')"></div>
        <% end %>
      </div>
    </div>
  <% end %>

  <div class="info box">
    <div class="info-item col-8">
      <h4>Description</h4>
      <div class="description">
        <p><%= @art_service.description %></p>
      </div>
    </div>

    <div class="info-item col-4 flex-column booking-box">
      <a href="/bookings/new" class="btn btn-primary">Book Now</a>
      <br>
      <%= link_to 'Edit', edit_art_service_path(@art_service), class: 'btn btn-primary'%>
       <br>
      <%= link_to "Delete #{@art_service.title}", art_service_path(@art_service), method: :delete, data: { confirm: "Are your sure?"}, class: 'btn btn-primary' %>
      <br>
      <%= link_to "Back to all art services", art_service_path, class: 'btn btn-primary' %>
    </div>
  </div>



  <h4>Location</h4>
  <div id="map"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>

  <div class="about">
    <h4>About <%= @art_service.user.first_name %></h4>
    <p><%= @art_service.user.about %></p>
    <div class="info-box">
      <div class="info-element">
        <p><i class="fa fa-archive" aria-hidden="true"></i><%= @art_service.category%></p>
      </div>
      <div class="info-element">
        <a href="#" class="btn btn-primary">Contact artist</a>
      </div>
    </div>
  </div>

  <div class="cards">
    <div class="card-category">
      Review 1
    </div>

    <div class="card-category">
      Review 2
    </div>

    <div class="card-category">
      Review 3
    </div>
  </div>

</div>
